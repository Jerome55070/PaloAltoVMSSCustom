{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationInsightsName": {
            "type": "string",
            "defaultValue": "appInsights"
        },
        "appInsightsRegion":{
            "type": "string",
            "defaultValue" : "eastus"
        },
    },
    "variables": {
        "appInsightsApiVersion": "2015-05-01"
    },
    "resources": [
        {
            "name": "[parameters('ApplicationInsightsName')]",
            "type": "Microsoft.Insights/components",
            "kind": "web",
            "apiVersion": "[variables('appInsightsApiVersion')]",
            "location": "[parameters('appInsightsRegion')]",
            "tags": {
                "PanoramaManaged": "Yes"
            },
            "properties": {
                "Application_Type": "web"
            }
        }
    ],
    "outputs": {
        "instrumentationKey": {
            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('ApplicationInsightsName')), variables('appInsightsApiVersion')).InstrumentationKey]",
            "type": "string"
        }
    }
}
